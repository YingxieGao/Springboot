<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.MultifunctionDao" >

    <select id="getStuById" resultType="com.example.demo.entity.Student">
        select * from Student
        where SId=#{id}
    </select>

    <select id="showAllStu" resultType="com.example.demo.entity.Student">
        select * from Student
    </select>

    <insert id="newStudent">
        insert into Student
        values(null,#{Sname},#{Sage},#{Ssex})
    </insert>

    <update id="updateStu">
        update Student
        set Sname=#{Sname},Sage=#{Sage},Ssex=#{Ssex}
        where SId=#{SId}
    </update>

    <delete id="deleteStu">
        delete from Student
        where SId=#{id}
    </delete>


</mapper>